<script>
  function searchLocation() {
    const input = document.getElementById("locationInput").value.toLowerCase();
    const resultElement = document.getElementById("searchResult");

    // Predefined list of locations
    const locations = ["chennai", "bangalore", "mumbai", "delhi", "kolkata"];

    if (locations.includes(input)) {
        resultElement.textContent = `Location found: ${input.charAt(0).toUpperCase() + input.slice(1)}`;
    } else {
        resultElement.textContent = "Location not found. Please try again.";
    }
}

</script>
  